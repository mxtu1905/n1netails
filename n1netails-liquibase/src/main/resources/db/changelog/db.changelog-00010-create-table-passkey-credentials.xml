<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="00010-1" author="jules">
        <createSequence sequenceName="passkey_credentials_seq" schemaName="ntail" incrementBy="1" startValue="1"/>
    </changeSet>

    <changeSet id="00010-2" author="jules">
        <createTable tableName="passkey_credentials" schemaName="ntail">
            <column name="id" type="BIGINT" defaultValueSequenceNext="passkey_credentials_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="credential_id" type="VARCHAR(255)">
                <constraints nullable="false", unique="true"/>
            </column>
            <column name="public_key_cose" type="BYTEA">
                <constraints nullable="false"/>
            </column>
            <column name="signature_count" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_handle" type="VARCHAR(255)"/>
            <column name="attestation_type" type="VARCHAR(255)"/>
            <column name="registered_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="last_used_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="uv_initialized" type="BOOLEAN"/>
            <column name="backup_eligible" type="BOOLEAN"/>
            <column name="backup_state" type="BOOLEAN"/>
            <column name="device_name" type="VARCHAR(255)"/>
            <column name="aaguid" type="VARCHAR(255)"/>
            <column name="attestation_object" type="VARCHAR(2048)"/>
        </createTable>
    </changeSet>

    <changeSet id="00010-3" author="jules">
        <addForeignKeyConstraint baseTableSchemaName="ntail"
                                 baseTableName="passkey_credentials"
                                 baseColumnNames="user_id"
                                 constraintName="fk_passkey_credentials_user"
                                 referencedTableSchemaName="ntail"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="00010-4" author="jules">
        <createTable tableName="passkey_credential_transports" schemaName="ntail">
            <column name="credential_id" type="BIGINT"> <!-- Corresponds to PasskeyCredentialEntity id -->
                <constraints nullable="false"/>
            </column>
            <column name="transport" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="00010-5" author="jules">
        <addForeignKeyConstraint baseTableSchemaName="ntail"
                                 baseTableName="passkey_credential_transports"
                                 baseColumnNames="credential_id"
                                 constraintName="fk_passkey_transports_credential"
                                 referencedTableSchemaName="ntail"
                                 referencedTableName="passkey_credentials"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="00010-6" author="jules">
        <addPrimaryKey columnNames="credential_id, transport"
                       constraintName="pk_passkey_credential_transports"
                       schemaName="ntail"
                       tableName="passkey_credential_transports"/>
    </changeSet>

</databaseChangeLog>
